<header class="py-1">
  <div class="container mx-auto flex justify-between items-center px-4 md:px-8 lg:px-12 w-full text-theme">
    <%= link_to "archimate", root_path, class: "text-xl mr-12" %>
    <% if logged_in? %>
      <div class="space-x-12 hidden lg:flex items-center text-sm">
        <%= link_to (t 'architecture.new.title'), new_architecture_path %>
        <%= link_to (t 'architecture.random.title'), random_architecture_index_path %>
        <%= link_to (t 'architecture.index.title'), architecture_index_path %>
        <%= link_to (t 'architecture.likes.title'), likes_architecture_index_path %>
        <%= link_to (t 'profiles.show.title'), profile_path %>
        <%= link_to (t 'defaults.logout'), logout_path, method: :delete, data: { confirm: t('defaults.message.logout_confirm') } %>
      </div>
    <% else %>
      <div class="hidden lg:flex">
        <%= link_to (t 'defaults.login'), login_path %>
      </div>
    <% end %>
    <div class="lg:hidden">
      <i class="fa-solid fa-bars text-2xl"></i>
    </div>
  </div>
</header>
