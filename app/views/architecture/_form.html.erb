<%= form_with model: architecture, local: true do |f| %>
	<div>
		<%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
		<%= f.label :location %>
    <%= f.text_area :location %>
	</div>
  <div>
    <%= f.label :architect %>
    <%= f.text_field :architect %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :open_range %>
    <%= f.select :open_range, {'公開': 'publish', '非公開': 'unpublish'}, { include_blank: "選択してください" } %>
  </div>

	<%= f.submit %>
<% end %>