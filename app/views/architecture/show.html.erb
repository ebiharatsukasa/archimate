<% if @architecture.present? %>
  <div class="flex flex-col h-screen md:flex-row items-end">
    <div class="w-full md:w-3/4 h-full relative">
      <%= render 'shared/architecture', architecture: @architecture %>
    </div>
    <div class="w-full md:w-144 px-4 md:pt-0 pt-4">
      <h1 class="text-3xl md:text-5xl mb-4"><%= @architecture.name %></h1>
      <div class="relative my-8 mb-20">
        <p><%= simple_format(@architecture.location) %></p>
        <div class="flex items-center pt-2">
          <i class="fa-sharp fa-solid fa-location-dot"></i>
          <p class="px-2">距離 28km</p>
        </div>
        <div class="md:static bottom-5 w-full text-white">
          <div class="flex flex-row-reverse md:flex-col my-8 mb-20 text-center justify-between items-center">
            <% if @architecture.by?(current_user) %>
              <%= link_to 'Edit', edit_architecture_path(@architecture), method: :get, class: 'bg-sixth text-black h-16 w-16 leading-16 md:leading-normal md:h-fit md:w-full md:mb-8 mr-20 md:mr-0 rounded-full hover:scale-105 hover:drop-shadow-lg cursor-pointer' %>
              <%= link_to 'Destroy', architecture_path(@architecture), method: :delete, data: { confirm: t('defaults.message.destroy_confirm') }, class: 'bg-seventh h-16 w-16 leading-16 md:leading-normal md:w-full md:h-fit ml-20 md:ml-0 rounded-full hover:scale-105 hover:drop-shadow-lg cursor-pointer' %>
            <% elsif current_page?(root_path) %>
              <%= render 'shared/like_nope_button', architecture: @architecture %>
              <%= link_to 'Reload', root_path, method: :get, class: 'bg-black h-16 w-16 leading-16 md:leading-normal md:w-full md:h-fit ml-20 md:ml-0 rounded-full hover:scale-105 hover:drop-shadow-lg cursor-pointer' %>
            <% else %>
              <%= render 'shared/like_nope_button', architecture: @architecture %>
              <%= link_to 'Check in', new_architecture_path, method: :get, class: 'bg-black h-16 w-16 leading-16 md:leading-normal md:w-full md:h-fit ml-20 md:ml-0 rounded-full hover:scale-105 hover:drop-shadow-lg cursor-pointer' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <p><%= t('.no_result') %></p>
<% end %>