<div>
  <form action="/diagnosis" name="answer" id="form">
    <% @selected_questions.each_with_index do |q, idx| %>
      <div id="question-container-<%= idx %>" <% if idx > 0 %>style="display: none;"<% end %>>
        <div class="flex flex-col md:flex-row items-end">
          <div class="w-full md:w-3/4 h-96 md:h-screen relative">
            <%= image_tag q[:image], class: 'image absolute inset-0 object-cover object-top h-full w-full' %>
            <div class="absolute inset-0 bg-black bg-opacity-50 text-white tracking-widest">
              <p class="text-center w-full bg-black text-white py-1">あなたについて教えてください</p>
              <div class="flex flex-col justify-center items-center h-full">
                <div class="max-w-2xl sm:mt-12 mt-6 text-center pb-24">
                  <h1 class="text-3xl mb-12">Q. <%= idx + 1 %> / <%= @selected_questions.length %></h1>
                  <p class="md:text-lg"><%= q[:title] %></p>
                </div>
              </div>
            </div>
          </div>
          <div class="w-full md:w-144 px-4 md:pt-0 pt-4">
            <div class="relative my-8 mb-20 text-center">
              <% if idx < @selected_questions.length - 1 %>
                <p onclick="storeTagIdAndShowNext(<%= idx %>)", class="w-full bg-eighth text-white mb-4 rounded-full hover:scale-105 hover:drop-shadow-lg cursor-pointer">YES</p>
              <% else %>
                <p onclick="yesAndSubmitForm(<%= idx %>)", class="w-full bg-eighth text-white mb-4 rounded-full hover:scale-105 hover:drop-shadow-lg cursor-pointer">YES</p>
              <% end %>
              <i class="fa-solid fa-rotate-left fa-xl hover:scale-110 hover:drop-shadow-lg cursor-pointer"></i>
              <% if idx < @selected_questions.length - 1 %>
                <p onclick="showNextQuestion(<%= idx %>)", class="w-full bg-seventh text-white my-4 rounded-full hover:scale-105 hover:drop-shadow-lg cursor-pointer">NO</p>
              <% else %>
                <p onclick="noAndSubmitForm()", class="w-full bg-seventh text-white my-4 rounded-full hover:scale-105 hover:drop-shadow-lg cursor-pointer">NO</p>
              <% end %>
              <input type="checkbox" id="checkbox<%= idx %>" name="answer[]" value="<%= q[:tag_id] %>" class="hidden">
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="w-full md:w-144 px-4 md:pt-0 pt-4">
      <input type="submit" id="submit-btn" class="hidden">
    </div>
  </form>
</div>
