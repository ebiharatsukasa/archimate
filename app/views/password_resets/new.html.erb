<% content_for(:title, t('.title')) %>
<div class="container mx-auto">
  <div class="max-w-5xl mx-auto p-4">
    <h2 class="py-12 md:py-24 text-xl text-center"><%= t('.title') %></h2>
    <%= form_with url: password_resets_path, local: true do |f| %>
      <div class="mb-12">
        <%= f.label :email, t(User.human_attribute_name(:email)), class: 'block text-black mb-1' %>
        <%= f.email_field :email, class: 'form-input block w-full py-1 border border-gray-400 rounded-full transition duration-200 focus:border-transparent focus:ring-third focus:ring-offset-2 focus:ring-offset-gray-500', placeholder: 'Email', required: true %>
      </div>
      <%= f.submit t('password_resets.new.submit'), class: 'bg-second hover:scale-105 hover:shadow-lg text-black w-full mb-12 rounded-full focus:outline-none focus:shadow-outline cursor-pointer' %>
    <% end %>
    <%= link_to (t '.to_login_page'), login_path, class: "text-xs sm:text-sm text-neutral-600 hover:text-theme" %>
  </div>
</div>