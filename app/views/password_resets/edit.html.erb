<% content_for(:title, t('.title')) %>
<div class="container mx-auto">
  <div class="max-w-5xl mx-auto p-4">
    <h2 class="py-12 md:py-24 text-xl text-center"><%= t('.title') %></h2>
    <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>
      <div class="mb-12">
        <%= f.label :email, class: 'block text-black mb-1' %>
        <%= @user.email %>
      </div>
      <div class="mb-12">
        <%= f.label :password, class: 'block text-black mb-1' %>
        <%= f.password_field :password, class: 'form-input block w-full py-1 border border-gray-400 rounded-full transition duration-200 focus:border-transparent focus:ring-third focus:ring-offset-2 focus:ring-offset-gray-500', required: true %>
      </div>
      <div class="mb-12">
        <%= f.label :password_confirmation, class: 'block text-black mb-1' %>
        <%= f.password_field :password_confirmation, class: 'form-input block w-full py-1 border border-gray-400 rounded-full transition duration-200 focus:border-transparent focus:ring-third focus:ring-offset-2 focus:ring-offset-gray-500', required: true %>
      </div>
      <div>
        <p><%= f.submit t('password_resets.new.submit'), class: 'bg-second hover:scale-105 hover:shadow-lg text-black w-full mb-12 rounded-full focus:outline-none focus:shadow-outline cursor-pointer' %></p>
      </div>
    <% end %>
  </div>
</div>